<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E28F74"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="84dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_circo_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="Futuras Apresentações"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Apresentação 1 -->
    <ImageButton
        android:id="@+id/lionButton"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/monkey"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/show1Details"
        app:layout_constraintWidth_percent="0.35" />

    <LinearLayout
        android:id="@+id/show1Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/lionButton"
        app:layout_constraintBottom_toBottomOf="@id/lionButton"
        app:layout_constraintStart_toEndOf="@id/lionButton"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView android:text="28/06/2025" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
        <TextView android:text="Patati Patatá Circo Show" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
        <TextView android:text="R. Uriel Gaspar, 149 - Belenzinho, SP" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/lionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Apresentação 2 -->
    <ImageButton
        android:id="@+id/elephantButton"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/elephant"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/show2Details"
        app:layout_constraintWidth_percent="0.35" />

    <LinearLayout
        android:id="@+id/show2Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/elephantButton"
        app:layout_constraintBottom_toBottomOf="@id/elephantButton"
        app:layout_constraintStart_toEndOf="@id/elephantButton"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView android:text="05/07/2025" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
        <TextView android:text="Patati Patatá Circo Show" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
        <TextView android:text="R. Uriel Gaspar, 149 - Belenzinho, SP" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/elephantButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Apresentação 3 -->
    <ImageButton
        android:id="@+id/focaButton"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bear"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/show3Details"
        app:layout_constraintWidth_percent="0.35" />

    <LinearLayout
        android:id="@+id/show3Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/focaButton"
        app:layout_constraintBottom_toBottomOf="@id/focaButton"
        app:layout_constraintStart_toEndOf="@id/focaButton"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView android:text="12/07/2025" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
        <TextView android:text="Patati Patatá Circo Show" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
        <TextView android:text="R. Uriel Gaspar, 149 - Belenzinho, SP" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/focaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Apresentação 4 -->
    <ImageButton
        android:id="@+id/focaButton2"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/foca"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/show4Details"
        app:layout_constraintWidth_percent="0.35" />

    <LinearLayout
        android:id="@+id/show4Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/focaButton2"
        app:layout_constraintBottom_toBottomOf="@id/focaButton2"
        app:layout_constraintStart_toEndOf="@id/focaButton2"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView android:text="19/07/2025" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
        <TextView android:text="Patati Patatá Circo Show" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
        <TextView android:text="R. Uriel Gaspar, 149 - Belenzinho, SP" android:textSize="16sp" android:fontFamily="sans-serif-smallcaps" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
