<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F47C57"
    android:padding="24dp">

    <!-- Ícone do malabarista -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/circus"
        android:layout_marginBottom="24dp" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forma de Pagamento"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Botões de formas de pagamento -->
    <Button
        android:id="@+id/btn_cartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cartão de Crédito"
        android:background="@drawable/outlined_button"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_pix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pix"
        android:background="@drawable/outlined_button"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_boleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boleto Bancário"
        android:background="@drawable/outlined_button"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <!-- Botão de confirmar -->
    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:background="@drawable/filled_button"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp" />

    <!-- Ícone da tenda -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/tenda_de_circo" />

</LinearLayout>
