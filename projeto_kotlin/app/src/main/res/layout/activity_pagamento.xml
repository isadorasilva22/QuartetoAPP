<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="385dp"
        android:layout_height="433dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62">

        <LinearLayout
            android:id="@+id/layoutPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Forma de Pagamento"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Opções de pagamento -->
            <RadioGroup
                android:id="@+id/rg_forma_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_cartao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartão de Crédito" />

                <RadioButton
                    android:id="@+id/rb_pix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pix" />

                <RadioButton
                    android:id="@+id/rb_boleto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boleto Bancário" />
            </RadioGroup>

            <!-- Layout Cartão -->
            <LinearLayout
                android:id="@+id/layout_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome no cartão"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/et_numero_cartao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número do cartão"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_validade"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Validade (MM/AA)" />

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_cvv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="CVV"
                        android:inputType="numberPassword" />
                </LinearLayout>
            </LinearLayout>

            <!-- Layout Pix -->
            <LinearLayout
                android:id="@+id/layout_pix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chave Pix: pagamentos@exemplo.com"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_copiar_pix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Copiar Chave Pix" />
            </LinearLayout>

            <!-- Layout Boleto -->
            <LinearLayout
                android:id="@+id/layout_boleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O boleto será gerado após a confirmação."
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_confirmar_pagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Confirmar Pagamento" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
